<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>PSR Generator</title>
    <meta name="generator" content="Bootply" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--bower:css-->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
    <!--endbower-->

    <!--bower:js-->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--endbower-->

    <!--inject:css-->
    <link rel="stylesheet" href="/css/styles.css">
    <!--endinject-->

    <!--inject:js-->
    <script src="/js/app.js"></script>
    <!--endinject-->

    <!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
</head>

<body>
    <header class="navbar navbar-bright navbar-fixed-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
                <a href="/" class="navbar-brand">Home</a>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="">Report</a>
                    </li>
                    <li>
                        <a href="">Login</a>
                    </li>
                </ul>
                <ul class="nav navbar-right navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
                        <ul class="dropdown-menu" style="padding:12px;">
                            <form class="form-inline">
                                <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-search"></i></button><input
                                    type="text" class="form-control pull-left" placeholder="Search">
                            </form>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div id="masthead">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>PSR Generator
                        <p class="lead"></p>
                    </h1>
                </div>
                <div class="col-md-5">
                    <div class="well well-lg">
                        <div class="row">
                            <div class="col-sm-12">
                                -Update infos

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /cont -->

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="top-spacer"> </div>
                </div>
            </div>
        </div>
        <!-- /cont -->

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <div>
                            <span class="red">{{errorMessage}}</span>
                            <form class="well" action="/report" name="generate-report" mehtod="get">
                                From: <input type="date" name="since"> Till: <input type="date" name="until"> </br>
                                Git Username:<input type="text" name="username" value="{{userInfo.username}}"> 
                                Git Reponame:<input type="text" name="reponame" value="{{userInfo.reponame}}"> 
                                Git Branch:<input type="text" name="sha" value="{{queryParam.branch}}"> </br>
                                Git Token: <input type="text" name="token" value="{{userInfo.token}}">(for private git repo only*)</br>
                                <input class="btn btn-primary" type="submit" value="Generate">
                            </form>
                        </div>
                        <h1>Commits</h1>
                        <ul>
                            {{#each repoDatas}}
                            <li>
                                <span>
                                    {{this.committedDate}} |
                                    {{this.committedBy}} | 
                                    {{this.commitMessage}} 
                                 </span>
                                <br>
                            </li>
                            {{/each}}
                        </ul>

                        <h1>Report</h1>
                        <ul>
                            {{#each reportDatas}}
                            <li>
                                <span>
                                   {{this.committedDate}} |
                                   {{this.committedBy}} | 
                                   {{this.taskId}} |
                                   {{this.taskTitle}} |
                                   {{this.taskTimeSpent}} mins |
                                   {{this.taskStatus}}
                                </span>
                                <br>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <!--/col-12-->
        </div>
    </div>
</body>

</html>